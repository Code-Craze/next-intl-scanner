{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist",
    "lib": ["ES6"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*"],

  "exclude": ["node_modules"]
}
